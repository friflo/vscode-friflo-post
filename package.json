{
    "name": "vscode-friflo-post",
    "displayName": "friflo POST",
    "description": "HTTP Client for Visual Studio Code to POST JSON, XML, ... to a REST API",
    "version": "0.0.1",
    "publisher": "friflo",
    "private": true,
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/friflo/vscode-friflo-post"
    },
    "engines": {
        "vscode": "^1.26.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "vscode-friflo-post.codelensPost",
                "title": "POST Request",
                "category": "friflo POST"
            },
            {
                "title": "Enable friflo POST",
                "command": "vscode-friflo-post.enablePostClient",
                "category": "friflo POST"
            },
            {
                "title": "Disable friflo POST",
                "command": "vscode-friflo-post.disablePostClient",
                "category": "friflo POST"
            }
        ],
        "configuration": {
            "properties": {
                "vscode-friflo-post.enablePostClient": {
                    "type": "boolean",
                    "default": true
                }
            }
        },
        "menus": {
            "editor/context": [
                {
                    "command": "vscode-friflo-post.codelensPost",
                    "when": "editorTextFocus && editorLangId == json",
                    "group": "vscode-friflo-post@1"
                }
            ],
            "explorer/context": [
                {
                    "command": "vscode-friflo-post.codelensPost",
                    "when": "true"
                }
            ]
        },
        "keybindings": [
            {
                "command": "vscode-friflo-post.codelensPost",
                "key": "ctrl+alt+p",
                "mac": "shift+cmd+p"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint . --ext .ts,.tsx",
        "watch": "tsc -watch -p ./"
    },
    "dependencies": {
        "axios": "^0.21.4",
        "minimatch": "^3.0.4"
    },
    "devDependencies": {
        "@types/node": "^12.12.0",
        "@types/minimatch": "^3.0.5",
        "@types/vscode": "^1.26.0",
        "@typescript-eslint/eslint-plugin": "^4.16.0",
        "@typescript-eslint/parser": "^4.16.0",
        "eslint": "^7.21.0",
        "typescript": "^4.3.5"
    }
}
